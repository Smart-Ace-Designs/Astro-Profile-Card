---
import Image from "astro/components/Image.astro";
import profileImage from "../assets/profile.jpg";
---

<div
  class="absolute top-full left-1/2 size-32 -translate-1/2 transform rounded-full bg-gradient-to-br from-sky-800 to-sky-300 p-1"
>
  <Image
    src={profileImage}
    alt="User profile"
    loading="eager"
    format="webp"
    class="rounded-full object-cover object-center"
  />
</div>
